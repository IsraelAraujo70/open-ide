{
  "name": "@israelaraujo70/open-ide",
  "version": "0.2.0",
  "description": "Terminal IDE built with OpenTUI and Bun",
  "module": "index.tsx",
  "type": "module",
  "bin": {
    "open-ide": "bin/open-ide.js"
  },
  "files": [
    "bin",
    "index.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.test.ts",
    ".open-ide/parsers.json",
    ".open-ide/parsers/**/*.scm",
    "README.md"
  ],
  "scripts": {
    "start": "bun run index.tsx",
    "dev": "bun --watch index.tsx",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepublishOnly": "bun test && bunx tsc --noEmit"
  },
  "keywords": [
    "ide",
    "terminal",
    "opentui",
    "bun",
    "editor"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "latest",
    "@opentui/react": "latest",
    "react": "^19.2.3"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
